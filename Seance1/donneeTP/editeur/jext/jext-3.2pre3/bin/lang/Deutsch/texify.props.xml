<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xproperties SYSTEM "xproperties.dtd" >

<xproperties>
  <property name="plugin.TeXifyPlugin.name" value="TeXify" />
  <property name="plugin.TeXifyPlugin.author" value="Klaus Hartlage" />
  <property name="plugin.TeXifyPlugin.version" value="0.1" />
  <property name="plugin.TeXifyPlugin.depend.0" value="jdk 1.2.1" />
  <property name="plugin.TeXifyPlugin.depend.1" value="jext 02.10.00.00" />
  
  <property name="texify.menu" value="texify.texify texify.texify_pdf - texify.winhelp_search texify.winhelp_miktex - texify.initexmf" />
  <property name="texify.menu.label" value="TeX-Aufrufe" />

  <property name="texify.texify.label" value="Texify" />
  <property name="texify.texify.shortcut" value="CA+t" />

  <property name="texify.texify_pdf.label" value="PDF Texify" />
  <property name="texify.texify_pdf.shortcut" value="CA+p" />

  <property name="texify.tth.label" value="TeX zu HTML" />
  <property name="texify.tth.shortcut" value="CA+h" />
    
  <property name="texify.winhelp_search.label" value="LaTeX2e Kurzreferenz" />
  <property name="texify.winhelp_search.shortcut" value="CA+F1" />

  <property name="texify.winhelp_miktex.label" value="MikTeX-Hilfe" />
  <property name="texify.winhelp_miktex.shortcut" value="CA+m" />

  <property name="texify.initexmf.label" value="initexmf (Dateinamen-Datenbank aktualisieren)" />
  <property name="texify.initexmf.shortcut" value="CA+i" />

  <property name="texify.title" value="TeX-Plugin" />
  <property name="texify.use_workdir" value="on" />
  <property name="texify.use_workdir.label" value="'cd' zum Dokumenten-Verzeichnis vor TeX-Aufruf" />
  <property name="texify.tex_dir" value="c:/texmf/" />
  <property name="texify.tex_dir.label" value="TeX-Hauptverzeichnis:" />
  <property name="texify.texify_exe" value="miktex/bin/texify.exe --run-viewer $f" />
  <property name="texify.texify_exe.label" value="TeXify-Befehl:" /> 
  <property name="texify.texify_pdf_exe" value="miktex/bin/texify.exe --pdf --run-viewer $f" />
  <property name="texify.texify_pdf_exe.label" value="TeXify-PDF-Befehl:" /> 
  <property name="texify.winhelp_search_exe" value="doc/latex/help/latex2e.hlp" />
  <property name="texify.winhelp_search_exe.label" value="LaTeX2e Kurzreferenz:" /> 
  <property name="texify.winhelp_miktex_exe" value="doc/miktex/miktex.hlp" />
  <property name="texify.winhelp_miktex_exe.label" value="MikTeX-Hilfe:" /> 
  <property name="texify.initexmf_exe" value="miktex/bin/initexmf.exe --update-fndb" />
  <property name="texify.initexmf_exe.label" value="initexmf (Dateinamen-Datenbank aktualisieren):" /> 
</xproperties>
